<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="5dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ابي اروح الهايبر وما عندي سياره ممكن حد يوديني "
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2فزعوا"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/my_list_help_accepted_accept"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فزعة سياره"
            android:textSize="15dp"
            android:layout_gravity="right"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/my_list_help_accepted_info_help_type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رجال"
            android:textSize="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/my_list_help_accepted_info_attendance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="منذ ساعة"
            android:textSize="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_list_help_accepted_time"
            android:layout_margin="5dp"/>
    </LinearLayout>
        <Button
            android:layout_width="117dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:text="الغاء"
            android:textColor="@color/button_color"
            android:textSize="15dp"
            android:background="@drawable/button_shap"/>
    </LinearLayout>
        <ImageView
            android:layout_width="69dp"
            android:layout_height="88dp"
            android:background="@drawable/type_car"
            android:layout_margin="7dp"/>
    </LinearLayout>

</RelativeLayout>